<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="UselessParent">


        <TextView
            android:id="@+id/textOrderDate"
            style="@style/CustomTextStyle.Body.PopMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            tools:text="@tools:sample/date/ddmmyy" />

        <TextView
            android:id="@+id/textNumberOrder"
            style="@style/CustomTextStyle.Body.PopMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            tools:text="@string/example_order_number" />

        <TextView
            android:id="@+id/textStatus"
            style="@style/CustomTextStyle.Body.PopMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            tools:text="@string/example_status" />

        <TextView
            android:id="@+id/textLocation"
            style="@style/CustomTextStyle.Body.PopMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/textTotal"
            style="@style/CustomTextStyle.Body.PopMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            tools:text="@string/example_price" />

        <ImageView
            android:id="@+id/buttonToDetail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:contentDescription="@string/icon_description"
            android:src="@drawable/icon_to_detail" />
    </TableRow>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>